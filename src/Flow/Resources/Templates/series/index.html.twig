{% extends 'layout.html.twig' %}

{% block content %}
<article class="series">
    <h1>{{series.name}}</h1>
    <p>This series has {{chapters.count}} chapters.</p>

    {% if chapters.count > 0 %}
        <ul>
            {% for chapter in chapters %}
                <li>
                    {{chapter.chapterNo}} - <a href="{{app.url.generate(chapter)}}">{{chapter.title}}</a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}

    <p><a href="/">Back home</a></p>
</article>
{% endblock %}